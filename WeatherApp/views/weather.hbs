<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Weather page</title>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    </head>
    <body>
        {{> header}}

        <main>
            <section id="weather">
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-md-6 col-lg-3">
                            <div class="list-group">
                                <a class="list-group-item" href="/weather/Zhytomyr">Zhytomyr</a>
                                <a class="list-group-item" href="/weather/Kyiv">Kyiv</a>
                                <a class="list-group-item" href="/weather/Poltava">Poltava</a>
                                <a class="list-group-item" href="/weather/Sumy">Sumy</a>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-9 border p-4">
                            <h2>Weather in the city {{city}}</h2>
                            
                            <img class="mx-auto d-block" src="https://openweathermap.org/img/wn/{{weather.weather.0.icon}}@2x.png" alt="temperature icon">
                            
                            <table class="table table-bordered">
                                <tr>
                                    <td>Pressure</td>
                                    <td>{{weather.main.pressure}}</td>
                                </tr>
                                <tr>
                                    <td>Humidity</td>
                                    <td>{{weather.main.humidity}}</td>
                                </tr>
                                <tr>
                                    <td>Temperature</td>
                                    <td>{{weather.main.temp}}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </section>
        </main>

        {{>footer}}
    </body>
</html>